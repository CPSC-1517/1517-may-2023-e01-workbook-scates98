                <li><a asp-area="" asp-page="/Privacy"><strong>Privacy</strong></a></li>
            </ul>
        </nav>
    </header>
    @*
        Using HolidayCSS basically means removing all Bootstrap classes in your HTML
        There are some Bootstrap classes that do not affect HolidayCSS
        By removing the class references for Bootstrap, your CSS is referred as a classless CSS
        NOTE: This does NOT mean you cannot have your own classes in your own CSS file
    *@
    <!-- Default classes and Bootstrap references removed -->
    <div>
        <main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2023 - WebApp by Chris Cates - CPSC1517 NAIT Course (All Rights Reserved) <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    @*
        These scripts are no longer needed because we are using HolidayCSS instead of Bootstrap
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>